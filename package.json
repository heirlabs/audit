{
  "name": "defai-swap-ton",
  "version": "1.0.0",
  "description": "DeFAI Swap Contract for TON Blockchain",
  "main": "index.js",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "compile": "func -o defai_swap.fif -SPA defai_swap.fc",
    "build": "tsc"
  },
  "keywords": [
    "ton",
    "blockchain",
    "smart-contract",
    "defai",
    "swap"
  ],
  "author": "DeFAI Team",
  "license": "MIT",
  "dependencies": {
    "ton-core": "^0.52.0",
    "ton-crypto": "^3.2.0"
  },
  "devDependencies": {
    "@ton-community/sandbox": "^0.11.0",
    "@ton-community/test-utils": "^0.3.0",
    "@ton-community/blueprint": "^0.12.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}